
{
    "manifest_version": 3,
    "name": "NotebookLM+tidus",
    "version": "1.0",
    "description": "An extension to enhance NotebookLM with smart folders and tagging.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://notebooklm.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
